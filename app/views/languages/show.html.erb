<%= render 'shared/navbar' %>
<div class="languages-container">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" class="svg-top">
    <path fill="#ffffff" fill-opacity="1" d="M0,160L48,154.7C96,149,192,139,288,138.7C384,139,480,149,576,133.3C672,117,768,75,864,90.7C960,107,1056,181,1152,192C1248,203,1344,149,1392,122.7L1440,96L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
  </svg>
  
    <div class="main-container-language">
      <h2> <%= @language.name %></h2>
        <div class="card-description">
          <p><%=@language.description %></p>
        </div>
    </div>
    <div class="main-container-courses d-flex">
      <%@language.courses.each do|course|%>
        <%= link_to course_path(course) do %>

        <div class="card-course">
            <img src="<%= image_path course.image_url %>">
            <div class="card-text-course ">
              <h4> <%= course.name %> </h4>
              <p> <%= course.description %> </p>
            </div>
            <div>
            <h5> <i class="fas fa-dollar-sign"> </i> 30.99 </h5>
            <h5> <i class="fas fa-tachometer-alt"> </i> <%= course.level %> </h5>
            </div>
        </div>
        <% end %>  
      <%end%> 
    </div>

      <div class="card-mentor-title-language">
      <h2 >Mentors Advise</h2>
      </div>

      <div class="row language-reviews">
        <% @language.language_reviews.each do |review| %>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="review-card">
              <img src="https://www.alohacriticon.com/wp-content/uploads/2020/05/jaleel-white-steve-urkel-fotos.jpg" alt="">
              <div class="lockup">
                <h3><%= review.user.name %></h3>
                <div class="stars">
                  <% 5.times do |index| %>
                    <%if index < review.user.user_rating(review.user)%>
                      <i class="fa fa-star"></i>
                    <% else %>
                      <i class="far fa-star"></i>
                    <% end %>
                  <% end %>
                </div>
                <p><%= review.comment %></p>
              </div>
            </div>
          </div>
        <% end  %>
      </div>   
     <div class="review-box">
      <%= render 'language_reviews/new'%>
    </div>

 
    </div>  
  </div>
</div>
