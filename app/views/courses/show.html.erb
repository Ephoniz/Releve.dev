  </svg>
  
  <div class="container-enrolments"> 
    <div class="row">
      <div class="col-12 col-sm-6 col-md-4">
        <div class="card-information-course">
          <img src="<%= image_path @course.image_url %>">
          <p><%= @course.price %>â‚¬</p>
          <div class="button-enrolment">
            <%= render 'enrolments/new'%>
          </div>
        </div>
      </div>
      <div class=" col-12 col-sm-6 col-md-8">
        <div class="card-enrolment">
            <h2><%= @course.name %></h2>
            <p>
              <%= @course.description %>
            </p>
        </div>
      </div>
  
  </div>
  
  
  
  </div>

   <div class="card-mentor-title-language" style = "padding: 70px;">
      <h2 >Mentors Advise</h2>
      </div>
  
  <div class="row language-reviews">
        <% @course.course_reviews.each do |review| %>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="review-card">
              <img src="https://www.alohacriticon.com/wp-content/uploads/2020/05/jaleel-white-steve-urkel-fotos.jpg" alt="">
              <div class="lockup">
                <h3><%= review.user.name %></h3>
                <div class="stars">
                  <% 5.times do |index| %>
                    <%if index < review.user.user_rating(review.user)%>
                      <i class="fa fa-star"></i>
                    <% else %>
                      <i class="far fa-star"></i>
                    <% end %>
                  <% end %>
                </div>
                <p><%= review.comment %></p>
              </div>
            </div>
          </div>
        <% end  %>
  </div>  

     <div class="review-box-course">
      <%= render 'course_reviews/new'%>
    </div>
</div>