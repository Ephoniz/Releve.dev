<% if message.user == current_user %>
  <div class="sender" id="message-<%= message.id %>">
    <i class="author">
      <span><%= message.user.username %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>
<% else %>
  <div class="receiver" id="message-<%= message.id %>">
    <i class="author">
      <span><%= message.user.username %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>
<% end %>