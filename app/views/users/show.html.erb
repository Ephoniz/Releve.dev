<div class="mentors-container">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" class="svg-top">
    <path fill="#fff" fill-opacity="1" d="M0,96L48,106.7C96,117,192,139,288,128C384,117,480,75,576,74.7C672,75,768,117,864,122.7C960,128,1056,96,1152,85.3C1248,75,1344,85,1392,90.7L1440,96L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
  </svg>

  <div class="mentor-banner">
    <div class="mentor-text">
      <%= cl_image_tag @user.profile_picture.key %>
      <h1><%= @user.name %></h1>
      <h2><%= @user.email %></h2>
      <div class="big-stars">
        <% 5.times do |index| %>
          <%if index < @user.user_rating(@user)%>
            <i class="fa fa-star"></i>
          <% else %>
            <i class="far fa-star"></i>
          <% end %>
        <% end %>
      </div>
      <p><%= @user.description %></p>
    </div>
    <div class="right-content">
      <div class="ticket-card">
        <%= render 'tickets/new'%>
      </div>
    </div>
  </div>
  
  <div class="row mentor-reviews">
    <% @user.mentor_reviews(@user).each do |review| %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="review-card">
          <img src="https://www.alohacriticon.com/wp-content/uploads/2020/05/jaleel-white-steve-urkel-fotos.jpg" alt="">
          <div class="lockup">
            <h3><%= review.user.name %></h3>
            <div class="stars">
              <% 5.times do |index| %>
                <%if index < review.rating%>
                  <i class="fa fa-star"></i>
                <% else %>
                  <i class="far fa-star"></i>
                <% end %>
              <% end %>
            </div>
            <p><%= review.comment %></p>
          </div>
        </div>
      </div>
    <% end  %>
  </div>
  <div class="mentor-bottom-section">
    <%= image_tag('flechita.svg', class: "flechita") %>
    <div class="review-box">
      <%= render 'mentor_reviews/new'%>
    </div>
    <%= image_tag('review-image.svg', class: "review-image") %>
  </div>
</div>